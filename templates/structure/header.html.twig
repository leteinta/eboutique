{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/header.css') }}">
{% endblock %}

{% block body %}
    <header class="navbar border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">
                <img src="{{ asset('img/GameAlley.png') }}" alt="logo Game Alley">
            </a>
            <ul class="nav">
                {% for categorie in categories %}
                    <li class="nav-item mx-1"><a class="btn btn-outline-dark" href="{{ path('app_categorie_produits', {'id': categorie.id}) }}">{{ categorie.nomCategorie }}</a></li>
                {% endfor %}
                {% if app.user %}
                    <li class="nav-item mx-1">
                        <a class="btn btn-secondary" href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </li>
                    <li class="nav-item mx-1">
                        <form action="{{ path('panier') }}">
                            <button type="submit" class='btn btn-dark'>Panier</button>
                        </form>
                        
                    </li>
                {% else %}
                    <li class="nav-item mx-1">
                        <a class="btn btn-secondary" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </header>
    <main>
        {% block main %}{% endblock %}
    </main>
{% endblock %}
